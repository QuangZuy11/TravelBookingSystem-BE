{
  "info": {
    "name": "Hotel Booking Payment API",
    "description": "Collection for testing Hotel Booking Payment Info APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.token) {",
                  "        pm.environment.set('jwt_token', jsonData.token);",
                  "        console.log('Token saved:', jsonData.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Hotel Bookings",
      "item": [
        {
          "name": "Get Booking Payment Info",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/traveler/bookings/:bookingId/payment-info",
              "host": ["{{base_url}}"],
              "path": ["api", "traveler", "bookings", ":bookingId", "payment-info"],
              "variable": [
                {
                  "key": "bookingId",
                  "value": "{{booking_id}}",
                  "description": "ID của booking cần lấy thông tin thanh toán"
                }
              ]
            },
            "description": "Lấy thông tin chi tiết để hiển thị khi user click button thanh toán"
          },
          "response": [
            {
              "name": "Success Response",
              "originalRequest": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{jwt_token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/api/traveler/bookings/6501234567890abcdef12345/payment-info",
                  "host": ["{{base_url}}"],
                  "path": ["api", "traveler", "bookings", "6501234567890abcdef12345", "payment-info"]
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"success\": true,\n  \"data\": {\n    \"hotel\": {\n      \"name\": \"Grand Hotel Hanoi\",\n      \"address\": \"123 Hoan Kiem Street, Hoan Kiem, Hanoi, Vietnam\"\n    },\n    \"room\": {\n      \"type\": \"deluxe\",\n      \"roomNumber\": \"301\",\n      \"floor\": 3,\n      \"area\": 35,\n      \"capacity\": 2,\n      \"pricePerNight\": 1500000\n    },\n    \"guest\": {\n      \"name\": \"Nguyen Van A\",\n      \"email\": \"nguyenvana@example.com\",\n      \"phone\": \"0912345678\"\n    },\n    \"booking\": {\n      \"bookingId\": \"6501234567890abcdef12345\",\n      \"checkInDate\": \"2025-10-25T00:00:00.000Z\",\n      \"checkOutDate\": \"2025-10-28T00:00:00.000Z\",\n      \"nights\": 3,\n      \"bookingDate\": \"2025-10-21T10:30:00.000Z\",\n      \"bookingStatus\": \"pending\",\n      \"paymentStatus\": \"pending\"\n    },\n    \"pricing\": {\n      \"pricePerNight\": 1500000,\n      \"nights\": 3,\n      \"totalAmount\": 4500000,\n      \"calculation\": \"1.500.000 VNĐ × 3 đêm = 4.500.000 VNĐ\"\n    }\n  },\n  \"message\": \"Lấy thông tin thanh toán thành công\"\n}"
            }
          ]
        },
        {
          "name": "Get User Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/traveler/bookings?page=1&limit=10&status=pending",
              "host": ["{{base_url}}"],
              "path": ["api", "traveler", "bookings"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Số trang (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Số lượng mỗi trang (default: 10)"
                },
                {
                  "key": "status",
                  "value": "pending",
                  "description": "Filter theo status: pending, confirmed, cancelled",
                  "disabled": true
                }
              ]
            },
            "description": "Lấy danh sách tất cả booking của user đang đăng nhập"
          },
          "response": []
        },
        {
          "name": "Get Booking By ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/traveler/bookings/:bookingId",
              "host": ["{{base_url}}"],
              "path": ["api", "traveler", "bookings", ":bookingId"],
              "variable": [
                {
                  "key": "bookingId",
                  "value": "{{booking_id}}",
                  "description": "ID của booking"
                }
              ]
            },
            "description": "Lấy thông tin chi tiết đầy đủ của một booking"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Error Tests",
      "item": [
        {
          "name": "Unauthorized - No Token",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/traveler/bookings/:bookingId/payment-info",
              "host": ["{{base_url}}"],
              "path": ["api", "traveler", "bookings", ":bookingId", "payment-info"],
              "variable": [
                {
                  "key": "bookingId",
                  "value": "{{booking_id}}"
                }
              ]
            },
            "description": "Test truy cập không có token - Should return 401"
          },
          "response": []
        },
        {
          "name": "Not Found - Invalid Booking ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/traveler/bookings/000000000000000000000000/payment-info",
              "host": ["{{base_url}}"],
              "path": ["api", "traveler", "bookings", "000000000000000000000000", "payment-info"]
            },
            "description": "Test với booking ID không tồn tại - Should return 404"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "booking_id",
      "value": "",
      "type": "string"
    }
  ]
}
